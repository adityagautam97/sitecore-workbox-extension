{
    "manifest_version": 3,
    "name": "Sitecore XM Cloud Helper",
    "version": "1.0.0",
    "description": "Adds helpful features to the Sitecore XM Cloud to improve usability and efficiency for content editors and developers.",
    "action": {
        "default_icon": {
            "16": "images/icon_16x16.png",
            "32": "images/icon_32x32.png",
            "48": "images/icon_48x48.png",
            "128": "images/icon_128x128.png"
        },
        "default_title": "Sitecore Workbox Helper",
        "default_popup": "settings.html"
    },
    "permissions": [
        "storage"
    ],
    "background": {
        "service_worker": "background.js"
    },
    "content_scripts": [
        {
            "js": [
                "crypto-js-min.js",
                "src/config.js",
                "src/utils.js",
                "src/api.js",
                "src/workflow.js",
                "src/checkbox.js",
                "src/notification.js",
                "src/workbox.js",
                "content-script.js"
            ],
            "matches": [
                "*://*/sitecore/shell*",
                "*://*/sitecore/client/*"
            ],
            "run_at": "document_end",
            "all_frames": true
        }
    ],
    "icons": {
        "16": "images/icon_16x16.png",
        "32": "images/icon_32x32.png",
        "48": "images/icon_48x48.png",
        "128": "images/icon_128x128.png"
    }
}